<h1>New region</h1>

<%= error_messages_for :region %>

<%= form_for(:region, :url => admin_regions_path) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Population</b><br />
    <%= f.text_field :population %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_regions_path %>
