<h1>User</h1>

<p>
  <b>Login:</b>
  <%=h @user.login %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Roles:</b>
  <% if @user.roles.empty? %>
    (None)
  <% else %>
    <%= @user.roles.collect{|r| h(r.name)}.join(', ') %>
  <% end %>
</p>


<%= link_to 'Edit', edit_admin_user_path(@user) %> |
<%= link_to 'Destroy', admin_user_path(@user), :confirm => 'Are you sure you want to delete this User?', :method => :delete %> |
<%= link_to 'Back', admin_users_path %>
