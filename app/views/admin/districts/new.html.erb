<h1>New Council</h1>

<%= error_messages_for :council %>

<%= form_for(:council, :url => admin_councils_path) do |f| %>
  <p>
    <b>Region</b><br />
    <%= f.select :region_id, Region.order(:name).all.collect{|r| [ r.name, r.id ]} %>
  </p>

  <p>
    <b>Council Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Color on Map of Tanzania (RRGGBB)</b><br />
    #<%= f.text_field :color %>
  </p>

  <p>
    <button class="debounced">Create</button>
  </p>
<% end %>

<%= link_to 'Back', admin_councils_path %>
