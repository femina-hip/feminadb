<h1>New District</h1>

<%= error_messages_for :district %>

<%= form_for(:district, :url => admin_districts_path) do |f| %>
  <p>
    <b>Region</b><br />
    <%= f.select :region_id, Region.active.order(:name).all.collect{|r| [ r.name, r.id ]} %>
  </p>

  <p>
    <b>District Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Color on Map of Tanzania (RRGGBB)</b><br />
    #<%= f.text_field :color %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_districts_path %>
