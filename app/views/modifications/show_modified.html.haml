%h1
  Modified
  = h @modification.new_o.class.name.humanize

%p
  %b Last Updated by:
  = render_user @modification.new_o.updated_by_user
%p
  %b Last Updated at:
  = h format_datetime(@modification.new_o.updated_at)

%h2 Attributes

%table.attributes
  %thead
    %tr
      %th Attribute
      %th New Value
      %th Old Value
  %tbody
    - @modification.new_o.attributes.keys.sort.each do |key|
      %tr{:class => @modification.attribute_changed?(key) ? 'modified' : 'unmodified'}
        %th= h key
        %td
          %div= show_attribute(@modification.new_o, key)
        %td
          %div= show_attribute(@modification.old_o, key)

%p.actions
  = link_to 'Back to Modifications List', :action => 'index'
