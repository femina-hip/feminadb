-# Required variables: "waiting_order", the waiting order
- row_class = cycle 'even', 'odd'

%tr{:class => row_class}
  %td.type
    %abbr{:title => waiting_order.customer.type.description}= waiting_order.customer.type.name
  %td.region= waiting_order.customer.region.name
  %td.district= waiting_order.customer.district
  %td.name
    %div{:style => 'overflow: hidden'}= link_to waiting_order.customer.name, waiting_order.customer
  %td.num-copies= waiting_order.num_copies
  %td.actions
    = link_to('Details', '#', :class => 'details')
%tr.details{:class => row_class, :style => 'display:none'}
  %td{:colspan => 6}
    %p
      %b Request Date:
      = waiting_order.request_date
    %p
      %b Comments:
    .redcloth= textilize(waiting_order.comments).html_safe
