-# Required variables: "standing_orders" => list of standing_orders

%table.customer-standing-orders
  %thead.title
    %tr
      %th{:colspan => (current_user.has_role?('edit-orders') ? 4 : 3)}
        = glossary_term('Standing Orders')
  %thead
    %tr
      %th Publication
      %th # Copies
      %th Comments
      - if current_user.has_role? 'edit-orders'
        %th
  %tbody
    - standing_orders.each do |standing_order|
      %tr
        %td{:class => 'publication'}= h standing_order.publication.name
        %td{:class => 'num_copies'}= h standing_order.num_copies
        %td{:class => 'comments'}= h standing_order.comments
        - if current_user.has_role? 'edit-orders'
          %td{:class => 'actions'}
            = link_to 'Edit', edit_customer_standing_order_path(@customer, standing_order)
            = button_to 'Delete', customer_standing_order_path(@customer, standing_order), :confirm => 'Are you sure you want to unsubscribe this Customer from this Publication?', :method => :delete
    - if current_user.has_role? 'edit-orders'
      %tr
        %td{:colspan => 4, :class => 'add'}
          = link_to 'Add New Standing Order', new_customer_standing_order_path(@customer)
