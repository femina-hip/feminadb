<%# Required local variables: "f", a form_for instance %>
<%# Required variables: "@issue", the issue to edit %>
  <p><b>Issue Number</b>: <%= f.text_field :issue_number %></p>
  <p><b>Date</b>: <%= f.calendar_date_select :issue_date %></p>
  <p><b>Issue Name</b>: <%= f.text_field :name %></p>
  <p><b>Quantity Printed</b>: <%= f.text_field :quantity %></p>
  <p><b>Box Sizes</b>: <%= f.text_field :issue_box_sizes_string %></p>
  <p><label><%= f.check_box :allows_new_special_orders %> Allow Special Orders for this Issue</label></p>
