-# Required variables: "f": a form_for; @customer: the Customer
%table.customer
  %thead
    %tr
      %th{colspan: 2}
        General Information:
        %b= h @customer.name
  %tbody
    %tr.first
      %th Name
      %td= f.text_field :name
    %tr
      %th Type
      %td= f.customer_type_field(:customer_type_id)
    %tr.school-levels
      %th School Levels
      %td= f.school_levels_and_boarding_field(:school_levels_and_boarding)
    %tr
      %th Council
      %td
        = f.region_field(:region_id)
        = f.council_field(:council)
    %tr.last
      %th Delivery Address
      %td= f.text_field(:delivery_address)
